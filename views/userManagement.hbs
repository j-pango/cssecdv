<head>
    {{> header }}
    
    <title>User Management - Flower Buds Boutique</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://kit.fontawesome.com/64f41baef5.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar">
        <img src="images/logofinal.png" alt="Logo" class="logo">
        <div id="navbar" class="nav-links">
            <a href="/">Home</a>
            <a href="/#products">Products</a>
            <a href="/#about-contact">About & Contact</a>
            {{#if user}}
            {{#if (eq user.role "Administrator")}}
                <a href="/admin">Admin Panel</a>
            {{/if}}
            {{/if}}
            <a href="/user-management">User Management</a>
        </div>
        <div class="nav-icons">
            <a href="/profile" class="profile-link">
                <div class="profile-circle">
                    <img src="/images/Profile.png" alt="Profile">
                </div>
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="user-management-container">
            <h1>User Management</h1>
            
            <!-- Create User Section -->
            <div class="section">
                <h2>Create New User</h2>
                <form id="create-user-form">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="role">Role:</label>
                        <select id="role" name="role" required>
                            <option value="Role B">Role B (Customer/Employee)</option>
                            <option value="Role A">Role A (Manager)</option>
                            <option value="Administrator">Administrator</option>
                        </select>
                    </div>
                    <div class="form-group" id="scope-group" style="display: none;">
                        <label for="assignedScope">Assigned Scope:</label>
                        <input type="text" id="assignedScope" name="assignedScope">
                    </div>
                    <button type="submit">Create User</button>
                </form>
            </div>

            <!-- User List Section -->
            <div class="section">
                <h2>User List</h2>
                <div class="user-filters">
                    <select id="role-filter">
                        <option value="">All Roles</option>
                        <option value="Administrator">Administrator</option>
                        <option value="Role A">Role A</option>
                        <option value="Role B">Role B</option>
                    </select>
                    <select id="status-filter">
                        <option value="">All Status</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div id="user-list">
                    <!-- Users will be loaded here -->
                </div>
            </div>

            <!-- Audit Logs Section -->
            <div class="section">
                <h2>Audit Logs</h2>
                <div class="log-filters">
                    <input type="date" id="start-date" placeholder="Start Date">
                    <input type="date" id="end-date" placeholder="End Date">
                    <select id="action-filter">
                        <option value="">All Actions</option>
                        <option value="LOGIN">Login</option>
                        <option value="LOGOUT">Logout</option>
                        <option value="CREATE">Create</option>
                        <option value="UPDATE">Update</option>
                        <option value="DELETE">Delete</option>
                    </select>
                    <button id="export-logs">Export Logs</button>
                </div>
                <div id="audit-logs">
                    <!-- Audit logs will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="js/userManagement.js" defer type="module"></script>
</body> 